<Window x:Class="ccliplog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ccliplog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="381*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Button x:Name="PostButton" Content="Button" Margin="10,10,10,10" Grid.Row="1" Grid.Column="1" Click="PostButton_Click"/>
        <TextBox x:Name="PostTextBox" HorizontalAlignment="Left" Margin="10,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="780" Grid.ColumnSpan="2" Height="361"/>
        <Label x:Name="AttachFileLabel" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,10" Grid.Row="1" RenderTransformOrigin="1.053,0.392"/>

    </Grid>
</Window>
